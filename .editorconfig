# Root EditorConfig file
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_style = space
max_line_length = 100

[*.py]
indent_style = space
indent_size = 4

[*.{c,cc,h,cpp,hpp}]
indent_size = 2

[*.md]
indent_size = 4
max_line_length = 120

[*.{yaml,yml}]
indent_size = 2
